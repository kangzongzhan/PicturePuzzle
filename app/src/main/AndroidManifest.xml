<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khgame.picturepuzzle2">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission  android:name="android.permission.INTERNET"/>

    <application android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.khgame.picturepuzzle2.ui.ClassicGameActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.khgame.picturepuzzle2.ui.SerialGameActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.SerialPictureListActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>